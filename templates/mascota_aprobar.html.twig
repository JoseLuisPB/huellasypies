{% extends 'panel_control.html.twig' %}
{% block title %} Aprobar mascota {% endblock %}
{% block javascripts %}
{% endblock %}
{% block main %}
    <main>
        <div class="container">
            <div class="row">
                {% if mascotas != null %}
                <table class="table col-12">
                <thead>
                  <tr>
                    <th scope="col">id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  
                    {% for item in mascotas %}
                    <tr>
                        <th scope="row">{{ item.id }}</th>
                        <td>{{ item.nombre }}</td>
                        <td><a class="ver_ficha" href="{{path('detalle_mascota',{'id' : item.id})}}">Ver ficha</a></td>
                        <td><a class="aprobar" href="{{path('aprobar_mascota',{'id' : item.id})}}"><i class="fas fa-check aprobar">Aprobar</i></a></td>
                    </tr>
                    {% endfor %}
                  
                </tbody>
              </table>
              {% else %}
              <p class="text-center m-auto"> No hay mascotas para aprobar</p>
              {% endif %}
            </div>
        </div><!-- Fin del contenedor-->
    </div>
</main>
{% endblock %}